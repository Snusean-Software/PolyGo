<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolyGo.Views.Map.MapMainBuildingPage"
             xmlns:pinch="clr-namespace:Xamarin.Forms.PinchZoomImage;assembly=Xamarin.Forms.PinchZoomImage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Content>
       
        <AbsoluteLayout VerticalOptions="CenterAndExpand">

            <BoxView Color="Ivory"
                     AbsoluteLayout.LayoutBounds="1, 1, 1, 0.85" 
                     AbsoluteLayout.LayoutFlags="All"/>

            <pinch:PinchZoom AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" 
                             AbsoluteLayout.LayoutFlags="All">
                <pinch:PinchZoom.Content>
                    <Image x:Name="floor_Image"/>
                </pinch:PinchZoom.Content>
            </pinch:PinchZoom>

            <BoxView Color="#E1F17B"
                     AbsoluteLayout.LayoutBounds="1, 0, 1, 0.15" 
                     AbsoluteLayout.LayoutFlags="All"/>


            <ImageButton x:Name="up_Button" 
                         Clicked="onUpButtonClicked"
                         AbsoluteLayout.LayoutBounds="0.05, 0.90, 0.1, 0.1" 
                         AbsoluteLayout.LayoutFlags="All"
                         BackgroundColor="Color.Transparent"/>
            
            <ImageButton x:Name="down_Button"
                         Clicked="onDownButtonClicked"
                         AbsoluteLayout.LayoutBounds="0.05, 1, 0.1, 0.1" 
                         AbsoluteLayout.LayoutFlags="All"
                         BackgroundColor="Color.Transparent"/>

            <Button  Text="Start" 
                     AbsoluteLayout.LayoutBounds="0.95, 0.01, 0.87, 0.06" 
                     AbsoluteLayout.LayoutFlags="All" 
                     BackgroundColor="Color.Transparent"
                     TextColor="#1E1E1F"
                     BorderWidth="1"
                     BorderColor="Gray"
                     CornerRadius="15"/>
            
            <Button  Text="Finish"
                     AbsoluteLayout.LayoutBounds="0.95, 0.084, 0.87, 0.06" 
                     AbsoluteLayout.LayoutFlags="All"
                     BackgroundColor="Color.Transparent"
                     TextColor="#1E1E1F"
                     BorderWidth="1"
                     BorderColor="Gray"
                     CornerRadius="15"/>

            <Image x:Name="decoration"
                   AbsoluteLayout.LayoutBounds="0.007, 0.015, 0.1, 0.12" 
                   AbsoluteLayout.LayoutFlags="All"/>

            <Label x:Name="floor_Number" 
                   Text="1" 
                   TextColor="Black" 
                   FontSize="22"
                   AbsoluteLayout.LayoutBounds="0.085, 0.923, 30, 30" 
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <ImageButton x:Name="main_map_button"
                         Clicked="onMainMapClicked"
                         AbsoluteLayout.LayoutBounds="0.95, 1, 0.1, 0.1" 
                         AbsoluteLayout.LayoutFlags="All"
                         BackgroundColor="Color.Transparent"/>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>